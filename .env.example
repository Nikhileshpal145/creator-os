# ============================================
# Creator OS Environment Configuration
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control!
# ============================================

# ===================
# REQUIRED IN PRODUCTION
# ===================

# Environment (development | production)
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://creator:your_secure_password@localhost:5433/creator_os
POSTGRES_USER=creator
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=creator_os

# Security (Generate with: openssl rand -hex 32)
SECRET_KEY=your_32_byte_hex_secret_key_here

# Redis
REDIS_URL=redis://localhost:6379/0

# ===================
# AI PROVIDERS (at least one required)
# ===================

# Hugging Face Token (for DeepSeek - recommended, free tier available)
# Get from: https://huggingface.co/settings/tokens
HF_TOKEN=

# Google Gemini API Key (recommended for vision features)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=

# OpenAI API Key (optional, paid)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ===================
# CORS & FRONTEND
# ===================

# Allowed origins for CORS (comma-separated)
# In production, set to your actual domains
# Example: https://app.yourdomain.com,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Frontend URL (for redirects after OAuth)
FRONTEND_URL=http://localhost:5173

# Frontend API base URL (used during web-app Docker build)
# In production, set to your API domain
FRONTEND_API_URL=http://localhost/api/v1

# ===================
# OPTIONAL
# ===================

# Sentry DSN for error tracking
# Get from: https://sentry.io
SENTRY_DSN=

# Extension API URL (for production builds)
# Default: http://localhost:8000
EXTENSION_API_URL=http://localhost:8000

